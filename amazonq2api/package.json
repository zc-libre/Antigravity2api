{
    "name": "amazonq-ts-auto-login",
    "version": "1.0.0",
    "description": "全自动 Amazon Q OIDC 设备授权与登录流程 (TypeScript) - Web API 版本",
    "type": "module",
    "main": "dist/server.js",
    "scripts": {
        "build": "tsc -p tsconfig.json",
        "start": "tsx src/server.ts",
        "start:cli": "tsx src/index.ts",
        "dev": "tsx watch src/server.ts",
        "lint": "tsc -p tsconfig.json --noEmit",
        "db:generate": "npx prisma generate",
        "db:migrate": "npx prisma migrate dev",
        "db:migrate:prod": "npx prisma migrate deploy",
        "db:push": "npx prisma db push",
        "db:studio": "npx prisma studio",
        "migrate:data": "tsx scripts/migrate-data.ts",
        "postinstall": "npx prisma generate"
    },
    "dependencies": {
        "@prisma/adapter-pg": "^7.0.1",
        "@prisma/client": "^7.0.1",
        "cors": "^2.8.5",
        "dotenv": "^16.3.0",
        "express": "^4.18.2",
        "fs-extra": "^11.2.0",
        "otplib": "^12.0.1",
        "pg": "^8.16.3",
        "prisma": "^7.0.1",
        "undici": "^6.0.0",
        "uuid": "^9.0.0"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/fs-extra": "^11.0.4",
        "@types/node": "^20.0.0",
        "@types/pg": "^8.15.6",
        "@types/uuid": "^9.0.0",
        "tsx": "^4.0.0",
        "typescript": "^5.3.0"
    }
}
